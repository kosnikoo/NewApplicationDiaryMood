<Window x:Class="NewApplicationDiaryMood.UI.StatisticWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Статистика настроений" Height="500" Width="800"
        WindowState="Maximized">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Статистика настроений" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <!-- Панель фильтрации -->
        <Border Grid.Row="0" Background="#F5F5F5" CornerRadius="5" Padding="10" 
                VerticalAlignment="Bottom" Margin="0,40,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Период:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>

                <DatePicker x:Name="StartDatePicker" Width="120" Margin="0,0,10,0"/>

                <TextBlock Text="по" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <DatePicker x:Name="EndDatePicker" Width="120" Margin="0,0,20,0"/>

                <Button x:Name="ApplyFilterButton" Content="Применить" 
                        Width="100" Height="30" Margin="0,0,10,0"
                        Click="ApplyFilterButton_Click" Background="#4CAF50" Foreground="White"/>

                <Button x:Name="ResetFilterButton" Content="Сбросить" 
                        Width="100" Height="30"
                        Click="ResetFilterButton_Click"/>
            </StackPanel>
        </Border>

        <TabControl Grid.Row="1" Margin="0,10,0,0">
            <TabItem Header="Динамика по месяцам">
                <Grid>
                    <oxy:PlotView Model="{Binding MonthPlotModel}"/>
                </Grid>
            </TabItem>

            <TabItem Header="Распределение по типам">
                <Grid>
                    <oxy:PlotView Model="{Binding MoodPlotModel}"/>
                </Grid>
            </TabItem>

            <TabItem Header="Табличные данные">
                <TabControl>
                    <TabItem Header="По месяцам">
                        <DataGrid x:Name="MonthlyStatsDataGrid" AutoGenerateColumns="False" 
                                  IsReadOnly="True" Margin="5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="80"/>
                                <DataGridTextColumn Header="Месяц" Binding="{Binding MonthName}" Width="120"/>
                                <DataGridTextColumn Header="Количество" Binding="{Binding Count}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                    <TabItem Header="По типам настроения">
                        <DataGrid x:Name="MoodStatsDataGrid" AutoGenerateColumns="False" 
                                  IsReadOnly="True" Margin="5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Тип настроения" Binding="{Binding MoodName}" Width="150"/>
                                <DataGridTextColumn Header="Количество" Binding="{Binding Count}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="CloseButton" Content="Закрыть" 
                    Width="100" Height="35" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>