<Window x:Class="UI.SubscriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Оформление подписки" Height="550" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock x:Name="TitleTextBlock" Text="⭐ Премиум Подписка" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="DescriptionTextBlock" Text="Получите доступ ко всем функциям:" 
                       FontSize="14" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Text="Все авторские упражнения"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Text="Расширенная статистика"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Text="Персональные рекомендации"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="✓" Foreground="Green" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBlock Text="Без рекламы" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>

            <Border Grid.Row="1" x:Name="CardInputPanel" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Данные карты для оплаты:" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Номер карты:" FontWeight="SemiBold"/>
                    <TextBox x:Name="CardNumberTextBox" 
                             Height="30" 
                             Margin="0,2,0,10" 
                             Padding="5"
                             MaxLength="19"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="Срок действия (ММ/ГГ):" FontWeight="SemiBold"/>
                            <TextBox x:Name="ExpiryTextBox" 
                                     Height="30" 
                                     Margin="0,2,0,10" 
                                     Padding="5"
                                     MaxLength="5"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="CVC/СVV:" FontWeight="SemiBold"/>
                            <TextBox x:Name="CVCTextBox" 
                                     Height="30" 
                                     Margin="0,2,0,10" 
                                     Padding="5"
                                     MaxLength="4"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" x:Name="ActiveSubscriptionPanel" 
                    Visibility="Collapsed"
                    Background="#F0FFF0" 
                    BorderBrush="#4CAF50" 
                    BorderThickness="1" 
                    CornerRadius="5"
                    Padding="15" 
                    Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="✅ Подписка активна" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#4CAF50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Ваша премиум-подписка уже активирована и действительна." 
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="Спасибо за использование нашего сервиса!" 
                               FontStyle="Italic"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="ConfirmPaymentButton" 
                    Content="Оплатить 299₽" 
                    Height="40" 
                    Width="180"
                    Background="#4CAF50" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Margin="0,0,10,0"
                    Click="ConfirmPaymentButton_Click"/>

            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Height="40" 
                    Width="100"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>