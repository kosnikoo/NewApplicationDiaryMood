<Window x:Class="UI.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="450" Width="800"
        WindowState="Maximized">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Регистрация" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Имя:*" FontWeight="SemiBold"/>
            <TextBox x:Name="FirstNameTextBox" Height="30" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Фамилия:*" FontWeight="SemiBold"/>
            <TextBox x:Name="LastNameTextBox" Height="30" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Email:*" FontWeight="SemiBold"/>
            <TextBox x:Name="EmailTextBox" Height="30" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Телефон:" FontWeight="SemiBold"/>
            <TextBox x:Name="PhoneTextBox" Height="30" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="0,0,0,10">
            <TextBlock Text="Пароль:*" FontWeight="SemiBold"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Margin="0,0,0,20">
            <TextBlock Text="Подтверждение пароля:*" FontWeight="SemiBold"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Height="30" Padding="5"/>
        </StackPanel>

        <TextBlock Grid.Row="7" Text="* - обязательные поля" FontSize="10" Foreground="Gray" 
                   VerticalAlignment="Bottom" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="RegisterButton" Content="Зарегистрироваться" 
                    Width="120" Height="35" Background="#4CAF50" Foreground="White" 
                    FontWeight="Bold" Click="RegisterButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="Отмена" 
                    Width="80" Height="35" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
