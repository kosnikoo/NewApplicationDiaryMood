<Window x:Class="UI.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Профиль пользователя" Height="500" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Профиль пользователя" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <GroupBox Grid.Row="1" Header="Личная информация" Margin="0,0,0,10">
            <StackPanel>
                <StackPanel Margin="0,10,0,5">
                    <TextBlock Text="Имя:" FontWeight="SemiBold"/>
                    <TextBox x:Name="FirstNameTextBox" Height="30" Padding="5" IsReadOnly="True" Background="#F5F5F5"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="Фамилия:" FontWeight="SemiBold"/>
                    <TextBox x:Name="LastNameTextBox" Height="30" Padding="5" IsReadOnly="True" Background="#F5F5F5"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="Email:" FontWeight="SemiBold"/>
                    <TextBox x:Name="EmailTextBox" Height="30" Padding="5" IsReadOnly="True" Background="#F5F5F5"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="Телефон:" FontWeight="SemiBold"/>
                    <TextBox x:Name="PhoneTextBox" Height="30" Padding="5" IsReadOnly="True" Background="#F5F5F5"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Смена пароля" Margin="0,0,0,10">
            <StackPanel>
                <StackPanel Margin="0,10,0,5">
                    <TextBlock Text="Текущий пароль:" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="CurrentPasswordBox" Height="30" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="Новый пароль:" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="NewPasswordBox" Height="30" Padding="5"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,10">
                    <TextBlock Text="Подтверждение нового пароля:" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="ConfirmNewPasswordBox" Height="30" Padding="5"/>
                </StackPanel>

                <Button x:Name="ChangePasswordButton" Content="Сменить пароль" 
                        Width="150" Height="35" Background="#4CAF50" Foreground="White"
                        FontWeight="Bold" Click="ChangePasswordButton_Click"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="Информация об аккаунте" Margin="0,0,0,15">
            <StackPanel>
                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="Дата регистрации:" FontWeight="SemiBold"/>
                    <TextBlock x:Name="RegistrationDateTextBlock" Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,5">
                    <TextBlock Text="Статус подписки:" FontWeight="SemiBold"/>
                    <TextBlock x:Name="SubscriptionStatusTextBlock" Margin="0,5,0,0" 
                               Foreground="#2196F3" FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,5" Visibility="Collapsed">
                    <TextBlock Text="ID пользователя:" FontWeight="SemiBold"/>
                    <TextBlock x:Name="UserIdTextBlock" Margin="0,5,0,0" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CloseButton" Content="Закрыть" 
                    Width="100" Height="35" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>